@page
@model DailyReport.WebLayer.Pages.Position.IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div>
    <a asp-area="" asp-page="/Position/CreatePosition">Create Position</a>
</div>


<table class="table">
    <thead>
        <tr>
            <th>Description</th>
            <th>*</th>
            <th>Edit</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.PositionDTOs)
        {
            <tr>
                <td>@item.Description</td>
                <td>*</td>
                <td>
                    <form method="post">
                        <a asp-page="EditPosition" asp-route-id="@item.Id">Edit</a>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>


<div>
    <a asp-controller="Home" asp-action="Index">Back</a>
</div>
