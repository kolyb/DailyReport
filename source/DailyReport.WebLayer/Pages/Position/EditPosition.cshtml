@page
@model DailyReport.WebLayer.Pages.Position.EditPositionModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h2>Edit the position</h2>
<form asp-page="EditPosition" method="post">
    <div asp-validation-summary="All"></div>
    <div>
        <div>
            <input asp-for="Id" hidden/>
            <span asp-validation-for="Id"></span>
        </div>
    </div>
    <div>
        <label>Description</label>
        <div>
            <input asp-for="Description" />
            <span asp-validation-for="Description"></span>
        </div>
    </div>
    <div class="main" style="display:flex">
        <input type="submit" value=Edit class="btn btn-info btn-md" />
        &nbsp;
        <input asp-page-handler="Cancel" type="submit" value=Refuse class="btn btn-info btn-md" />
    </div>
</form>

<div>
    <a asp-page="Index">Back</a>
</div>
