@page
@model DailyReport.WebLayer.Pages.Position.CreatePositionModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h2>Create a new position</h2>
<form method="post">
    <div asp-validation-summary="All"></div>
    <div>
        <label>Description</label>
        <div>
            <input asp-for="Description" required/>
            <span asp-validation-for="Description"></span>
        </div>
    </div>
    <div>
        <input type="submit" value=Create class="btn btn-info btn-md" />
        &nbsp;
        <input asp-page-handler="Cancel" type="submit" value=Refuse class="btn btn-info btn-md" />
    </div>
</form>
<div>
    <a asp-page="Index">Back</a>
</div>
