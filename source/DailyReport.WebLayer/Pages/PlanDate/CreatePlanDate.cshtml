@page
@model DailyReport.WebLayer.Pages.PlanDate.CreatePlanDateModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h2>Create a new plan day"</h2>
<form method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="PlanDay" class="control-label">Plan day</label>
        <input type="date" asp-for="PlanDay" class="form-control" />
    </div>
    <div>
        <input type="submit" value=Create class="btn btn-info btn-md" />
        &nbsp;
        <input asp-page-handler="Cancel" type="submit" value=Refuse class="btn btn-info btn-md" />
    </div>
</form>

<div>
    <a asp-page="/Plan/Index">Back</a>
</div>
