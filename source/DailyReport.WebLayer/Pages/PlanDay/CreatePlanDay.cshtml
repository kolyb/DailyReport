@page
@model DailyReport.WebLayer.Pages.PlanDay.CreatePlanDayModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h2>Create a new plan day</h2>
<form asp-page="CreatePlanDay" method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group"> 
        <label asp-for="Day" class="control-label">Plan day</label>
        <input type="date" asp-for="Day" class="form-control"/>
    </div> 
    <div class="main" style="display:flex">
        <input type="submit" value=Create class="btn btn-info btn-md" />
        &nbsp;
        <input asp-page-handler="Cancel" type="submit" value=Refuse class="btn btn-info btn-md" />
    </div>
</form>

<div>
    <a asp-page="/Plan/Index">Back</a>
</div>
