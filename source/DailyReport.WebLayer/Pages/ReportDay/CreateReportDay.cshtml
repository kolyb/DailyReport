@page
@model DailyReport.WebLayer.Pages.ReportDay.CreateReportDayModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h2>Create a new report day</h2>
<form asp-page="CreateReportDay" method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="RecordDay" class="control-label">Report day</label>
        <input type="date" asp-for="RecordDay" class="form-control" />
    </div>
    <div class="main" style="display:flex">
        <input type="submit" value=Create class="btn btn-info btn-md" />
        &nbsp;
        <input asp-page-handler="Cancel" type="submit" value=Refuse class="btn btn-info btn-md" />
    </div>
</form>

<div>
    <a asp-page="Index">Back</a>
</div>
