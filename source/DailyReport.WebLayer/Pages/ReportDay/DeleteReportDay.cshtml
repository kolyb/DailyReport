@page
@model DailyReport.WebLayer.Pages.ReportDay.DeleteReportDayModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<form method="post">
    <div asp-validation-summary="All"></div>
    <div>
        <label>ID</label>
        <div>
            <input asp-for="Id" />
            <span asp-validation-for="Id"></span>
        </div>
    </div>
    <div>
        <label>Report Day</label>
        <div>
            <input asp-for="RecordDay" />
            <span asp-validation-for="RecordDay"></span>
        </div>
    </div>
    <div>
        <input type="submit" value="Delete" class="btn btn-info btn-md" />
        &nbsp;
        <input asp-page-handler="Cancel" type="submit" value="Refuse" class="btn btn-info btn-md" />
    </div>
</form>
<div>
    <a asp-controller="Home" asp-action="Index">Back</a>
</div>