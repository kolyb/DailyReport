@page
@model DailyReport.WebLayer.Pages.Profession.IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div>
    <a asp-area="" asp-page="/Profession/CreateProfession">Create Profession</a>
</div>


<table class="table">
    <thead>
        <tr>
            <th>Description</th>
            <th>*</th>
            <th>Edit</th>
            <th>*</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ProfessionDTOs)
        {
            <tr>
                <td>@item.Description</td>
                <td>*</td>
                <td>
                    <form method="post">
                        <a asp-page="EditProfession" asp-route-id="@item.Id">Edit</a>
                    </form>
                </td>
                <td>*</td>
                <td>
                    <form method="post">
                        <a asp-page="DeleteProfession" asp-route-id="@item.Id">Delete</a>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>


<div>
    <a asp-controller="Home" asp-action="Index">Back</a>
</div>
