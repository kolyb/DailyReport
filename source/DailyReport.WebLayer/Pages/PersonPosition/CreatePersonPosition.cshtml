@page
@model DailyReport.WebLayer.Pages.PersonPosition.CreatePersonPositionModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h2>Create a new position"</h2>
<form method="post">
    <div asp-validation-summary="All"></div>
    <div>
        <label>Position</label>
        <div>
            <input asp-for="Position" />
            <span asp-validation-for="Position"></span>
        </div>
    </div>
    <div>
        <label>Expert</label>
        <div>
            <input asp-for="Expert" />
            <span asp-validation-for="Expert"></span>
        </div>
    </div>
    <div>
        <input type="submit" value=Create class="btn btn-info btn-md" />
        &nbsp;
        <input asp-page-handler="Cancel" type="submit" value=Refuse class="btn btn-info btn-md" />
    </div>
</form>
<div>
    <a asp-controller="Home" asp-action="Index">Back</a>
</div>
