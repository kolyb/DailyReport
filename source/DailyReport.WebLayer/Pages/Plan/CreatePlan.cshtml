@page
@model DailyReport.WebLayer.Pages.Plan.CreatePlanModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h2>Create a new plan"</h2>
<form method="post">
    <div asp-validation-summary="All"></div>
    <div>
        <label>PlanTime</label>
        <div>
            <input asp-for="PlanTime" />
            <span asp-validation-for="PlanTime"></span>
        </div>
    </div>
    <div>
        <label>Person</label>
        <div>
            <select asp-for="PersonId" asp-items="Model.Persons">
            </select>
            <span asp-validation-for="PersonId"></span>
        </div>
    </div>
    <div>
        <label>Plan day</label>
        <div>
            <select asp-for="PlanDateId" asp-items="Model.PlanDates">
            </select>
            <span asp-validation-for="PlanDateId"></span>
        </div>
    </div>
    <div>
        <input type="submit" value=Create class="btn btn-info btn-md" />
        &nbsp;
        <input asp-page-handler="Cancel" type="submit" value=Refuse class="btn btn-info btn-md" />
    </div>
</form>
<div>
    <a asp-controller="Home" asp-action="Index">Back</a>
</div>
