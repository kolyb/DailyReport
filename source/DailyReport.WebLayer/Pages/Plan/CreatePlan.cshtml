@page
@model DailyReport.WebLayer.Pages.Plan.CreatePlanModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h2>Create a new plan"</h2>
<form method="post">
    <div asp-validation-summary="All"></div>
    <div>
        <label>PlanTime</label>
        <div class="form-group">
            <label asp-for="PlanTime" class="control-label">PlanTime</label>
            <input type="time" asp-for="PlanTime" class="form-control" />
        </div>
    </div>
    <div>
        <label>Person</label>
        <div>
            <select asp-for="PersonId" asp-items="Model.Persons.OrderBy(i => i.Text)">
            </select>
            <span asp-validation-for="PersonId"></span>
        </div>
    </div>
    <div>
        <label>PlanDay</label>
        <div class="form-group">
            <label asp-for="PlanDay" class="control-label">Plan day</label>
            <input type="date" asp-for="PlanDay" class="form-control"  disabled/>
        </div>
    </div>
    <div>
        <input type="submit" value=Create class="btn btn-info btn-md" />
        &nbsp;
        <input asp-page-handler="Cancel" type="submit" value=Refuse class="btn btn-info btn-md" />
    </div>
</form>
<div>
    <a asp-page="Index">Back</a>
</div>
