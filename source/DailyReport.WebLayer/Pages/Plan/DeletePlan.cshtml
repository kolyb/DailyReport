@page
@model DailyReport.WebLayer.Pages.Plan.DeletePlanModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<form asp-page="DeletePlan" method="post">
    <div asp-validation-summary="All"></div>
    <div>
        <div>
            <input asp-for="Id" hidden />
            <span asp-validation-for="Id"></span>
        </div>
    </div>
    <div>
        <div>
            <input asp-for="PlanDayId" hidden/>
            <span asp-validation-for="PlanDayId"></span>
        </div>
    </div>
    <div>
        <label>@Model.StartTime</label>
        <div>
            <input asp-for="StartTime" hidden/>
            <span asp-validation-for="StartTime"></span>
        </div>
    </div>
    <div>
        <label>@Model.FinishTime</label>
        <div>
            <input asp-for="FinishTime" hidden/>
            <span asp-validation-for="FinishTime"></span>
        </div>
    </div>
    <div>
        <label>@Model.IntervalTime</label>
        <div>
            <input asp-for="IntervalTime" hidden/>
            <span asp-validation-for="IntervalTime"></span>
        </div>
    </div>
    <div class="main" style="display:flex">
        <input type="submit" style="background-color:red"value="Delete" class="btn btn-info btn-md" />
        &nbsp;
        <input asp-page-handler="Cancel" type="submit" style="background-color:green"value="Refuse" class="btn btn-info btn-md" />
    </div>
</form>

