@page
@model DailyReport.WebLayer.Pages.Plan.IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div>
    <a asp-area="" asp-page="/PlanDate/CreatePlanDate">Create plan date</a>
</div>


<table class="table">
    <thead>
        <tr>
            <th>Day</th>
            <th>*</th>
            <th>Edit"</th>
            <th>*</th>
            <th>Delete</th>
            <th>*</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.PlanDateDTOs)
        {
            <tr>
                <td>@item.PlanDay</td>
                <td>*</td>
                <td>
                    <form method="post">
                        <a asp-page="CreatePlan" asp-route-id="@item.Id">Create plan</a>
                    </form>
                </td>
                <td>*</td>
                <td>
                    <form method="post">
                        <a asp-page="DeletePlan" asp-route-id="@item.Id">Delete</a>
                    </form>
                </td>
                <td>*</td>
                <td>
                    <form method="post">
                        <a asp-page="DetailsPlan" asp-route-id="@item.Id">Details</a>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>


<div>
    <a asp-controller="Home" asp-action="Index">Back</a>
</div>
