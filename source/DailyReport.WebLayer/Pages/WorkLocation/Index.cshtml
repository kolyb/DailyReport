@page
@model DailyReport.WebLayer.Pages.WorkLocation.IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div>
    <a asp-area="" asp-page="/WorkLocation/CreateWorkLocation">Create WorkLocation</a>
</div>


<table class="table">
    <thead>
        <tr>
            <th>Description</th>
            <th>*</th>
            <th>AdressWorkLocation</th>
            <th>*</th>
            <th>Edit</th>
            <th>
                *
            </th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.WorkLocationDTOs)
        {
            <tr>
                <td>@item.Description</td>
                <td>*</td>
                <td>@item.AdressWorkLocation</td>
                <td>*</td>
                <td>
                    <form method="post">
                        <a asp-page="EditWorkLocation" asp-route-id="@item.Id">Edit</a>
                    </form>
                </td>
                <td>*</td>
                <td>
                    <form method="post">
                        <a asp-page="DeleteWorkLocation" asp-route-id="@item.Id">Delete</a>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>


<div>
    <a asp-controller="Home" asp-action="Index">Back</a>
</div>