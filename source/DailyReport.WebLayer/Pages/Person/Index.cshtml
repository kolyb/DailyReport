@page
@model DailyReport.WebLayer.Pages.Person.IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div>
    <a asp-area="" asp-page="/Person/CreatePerson">Create person</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Last Name</th>
            <th>*</th>
            <th>Work place</th>
            <th>*</th>
            <th>Edit</th>
            <th>*</th>
            <th>Delete</th>
            <th>*</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Persons is not null)
        {
            @foreach (var item in Model.Persons)
            {
                <tr>
                    <td>@item.Lastname</td>
                    <td>*</td>
                    <td>@item.DescriptionWorkplace</td>
                    <td>*</td>
                    <td>
                        <form method="post">
                            <a asp-page="EditPerson" asp-route-id="@item.Id">Edit</a>
                        </form>
                    </td>
                    <td>*</td>
                    <td>
                        <form method="post">
                            <a asp-page="DeletePerson" asp-route-id="@item.Id">Delete</a>
                        </form>
                    </td>
                    <td>*</td>
                    <td>
                        <form method="post">
                            <a asp-page="DetailsPerson" asp-route-id="@item.Id">Details</a>
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>


<div>
    <a asp-controller="Home" asp-action="Index">Back</a>
</div>

