@page
@model DailyReport.WebLayer.Pages.Workplace.CreateWorkplaceModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h2>Create a new workplace</h2>
<form asp-page="CreateWorkplace" method="post">
    <div asp-validation-summary="All"></div>
    <div>
        <label>Description</label>
        <div>
            <input asp-for="Description" required/>
            <span asp-validation-for="Description"></span>
        </div>
    </div>
    <div>
        <label>City</label>
        <div>
            <input asp-for="AdressCity" required/>
            <span asp-validation-for="AdressCity"></span>
        </div>
    </div>
    <div>
        <label>Street</label>
        <div>
            <input asp-for="AdressStreet" required/>
            <span asp-validation-for="AdressStreet"></span>
        </div>
    </div>
    <div>
        <label>House</label>
        <div>
            <input asp-for="AdressHouse" required/>
            <span asp-validation-for="AdressHouse"></span>
        </div>
    </div>
    <div class="main" style="display:flex">
        <input type="submit" value=Create class="btn btn-info btn-md" />
        &nbsp;
        <input asp-page-handler="Cancel" type="submit" value=Refuse class="btn btn-info btn-md" />
    </div>
</form>

