@page
@model DailyReport.WebLayer.Pages.Workplace.EditWorkplaceModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<form asp-page="EditWorkplace" method="post">
    <div asp-validation-summary="All"></div>
    <div>
        <div>
            <input asp-for="Id" hidden />
            <span asp-validation-for="Id"></span>
        </div>
    </div>
    <div>
        <label>Description</label>
        <div>
            <input asp-for="Description" />
            <span asp-validation-for="Description"></span>
        </div>
    </div>
    <div>
        <label>City</label>
        <div>
            <input asp-for="AdressCity" />
            <span asp-validation-for="AdressCity"></span>
        </div>
    </div>
    <div>
        <label>Street</label>
        <div>
            <input asp-for="AdressStreet" />
            <span asp-validation-for="AdressStreet"></span>
        </div>
    </div>
    <div>
        <label>House</label>
        <div>
            <input asp-for="AdressHouse" />
            <span asp-validation-for="AdressHouse"></span>
        </div>
    </div>
    <div>
        <input type="submit" value=Edit class="btn btn-info btn-md" />
        &nbsp;
        <input asp-page-handler="Cancel" type="submit" value=Refuse class="btn btn-info btn-md" />
    </div>
</form>

