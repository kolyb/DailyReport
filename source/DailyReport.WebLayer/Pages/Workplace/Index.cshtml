@page
@model DailyReport.WebLayer.Pages.Workplace.IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div>
    <a asp-area="" asp-page="/Workplace/CreateWorkplace">Create Workplace</a>
</div>


<table class="table">
    <thead>
        <tr>
            <th>Description</th>
            <th>*</th>
            <th>AdressCity</th>
            <th>*</th>
            <th>AdressStreet</th>
            <th>
                *
            </th>
            <th>AdressHouse</th>
            <th>*</th>
            <th>Edit</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.WorkplaceDTOs is not null)
        {
            @foreach (var item in Model.WorkplaceDTOs)
            {
                <tr>
                    <td>@item.Description</td>
                    <td>*</td>
                    <td>@item.AdressCity</td>
                    <td>*</td>
                    <td>@item.AdressStreet</td>
                    <td>*</td>
                    <td>@item.AdressHouse</td>
                    <td>*</td>
                    <td>
                        <a asp-page="EditWorkplace" asp-route-id="@item.Id"
                           class="btn btn-info btn-md"
                           data-ajax="true"
                           data-ajax-update="#reg"
                           data-ajax-mode="replace"
                           data-ajax-method="get">
                            Edit
                        </a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<div id="reg">
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.min.js"></script>

<div>
    <a asp-controller="Home" asp-action="Index">Back</a>
</div>