@page
@model DailyReport.WebLayer.Pages.Workplace.IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div>
    <a asp-area="" asp-page="/Workplace/CreateWorkplace">Create Workplace</a>
</div>


<table class="table">
    <thead>
        <tr>
            <th>Description</th>
            <th>*</th>
            <th>AdressCity</th>
            <th>*</th>
            <th>AdressStreet</th>
            <th>
                *
            </th>
            <th>AdressHouse</th>
            <th>*</th>
            <th>Edit</th>
            <th>*</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.WorkplaceDTOs)
        {
            <tr>
                <td>@item.Description</td>
                <td>*</td>
                <td>@item.AdressCity</td>
                <td>*</td>
                <td>@item.AdressStreet</td>
                <td>*</td>
                <td>@item.AdressHouse</td>
                <td>*</td>
                <td>
                    <form method="post">
                        <a asp-page="EditWorkplace" asp-route-id="@item.Id">Edit</a>
                    </form>
                </td>
                <td>*</td>
                <td>
                    <form method="post">
                        <a asp-page="DeleteWorkplace" asp-route-id="@item.Id">Delete</a>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>


<div>
    <a asp-controller="Home" asp-action="Index">Back</a>
</div>