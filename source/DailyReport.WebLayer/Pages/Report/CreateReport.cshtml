@page
@model DailyReport.WebLayer.Pages.Report.CreateReportModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h2>Create a new report</h2>
<form method="post">
    <div asp-validation-summary="All"></div>
    <div>
        <div class="form-group">
            <label asp-for="StartTime" class="control-label">Start Time</label>
            <input type="time" asp-for="StartTime" class="form-control" />
        </div>
    </div>
    <div>
        <div class="form-group">
            <label asp-for="FinishTime" class="control-label">Finish Time</label>
            <input type="time" asp-for="FinishTime" class="form-control" />
        </div>
    </div>
    <div>
        <label>Person</label>
        <div>
            <select asp-for="PersonId" asp-items="Model?.Persons?.OrderBy(i => i.Text)">
            </select>
            <span asp-validation-for="PersonId"></span>
        </div>
    </div>
    <div>
        <div class="form-group">
            <label asp-for="RecordDay" class="control-label">Report day</label>
            <input type="date" asp-for="RecordDay" class="form-control" disabled />
        </div>
    </div>
    <div>
        <input type="submit" value=Create class="btn btn-info btn-md" />
        &nbsp;
        <input asp-page-handler="Cancel" type="submit" value=Refuse class="btn btn-info btn-md" />
    </div>
</form>
<div>
    <a asp-page="/Plan/Index">Back</a>
</div>
