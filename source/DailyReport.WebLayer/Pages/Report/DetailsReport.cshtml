@page
@model DailyReport.WebLayer.Pages.Report.DetailsReportModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<table class="table">
    <thead>
        <tr>
            <th>Lastname</th>
            <th>*</th>
            <th>Start Time</th>
            <th>*</th>
            <th>Finish Time</th>
            <th>*</th>
            <th>Interval Time</th>
            <th>*</th>
            <th>Workplace</th>
            <th>*</th>
            <th>Delete</th>
            <th>*</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Persons is not null)
        {
            @foreach (var item in Model.Persons)
            {
                <tr>
                    <td>@item.Lastname</td>
                    <td>*</td>
                    <td>@item.StartTime</td>
                    <td>*</td>
                    <td>@item.FinishTime</td>
                    <td>*</td>
                    <td>@item.IntervalTime</td>
                    <td>*</td>
                    <td>@item.DescriptionWorkplace</td>
                    <td>*</td>
                    <td>
                        <a asp-page="DeleteReport" asp-route-id="@item.Id"
                        class="btn btn-info btn-md"
                        data-ajax="true"
                        data-ajax-update="#reg"
                        data-ajax-mode="replace"
                        data-ajax-method="get">
                            Delete report
                        </a>
                    </td>
                    <td>*</td>
                </tr>
            }
        }
    </tbody>
</table>

<div>
    <div>
        <a asp-page="CreateReport" asp-route-id="@Model.GetId"
           class="btn btn-info btn-md"
           data-ajax="true"
           data-ajax-update="#reg"
           data-ajax-mode="replace"
           data-ajax-method="get">
            Create report
        </a>
    </div>
</div>

<div id="reg">
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.min.js"></script>

<div>
    <a asp-page="Index">Back</a>
</div>
