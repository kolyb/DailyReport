@page
@model DailyReport.WebLayer.Pages.Report.DetailsReportModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<table class="table">
    <thead>
        <tr>
            <th>Lastname</th>
            <th>*</th>
            <th>Start Time</th>
            <th>*</th>
            <th>Finish Time</th>
            <th>*</th>
            <th>Interval Time</th>
            <th>*</th>
            <th>Workplace</th>
            <th>*</th>
            <th>Delete</th>
            <th>*</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ReportLastnames)
        {
            <tr>
                <td>@item.Lastname</td>
                <td>*</td>
                <td>@item.StartTime.ToLongTimeString()</td>
                <td>*</td>
                <td>@item.FinishTime.ToLongTimeString()</td>
                <td>*</td>
                <td>@item.IntervalTime</td>
                <td>*</td>
                <td>@item.DescriptionWorkplace</td>
                <td>*</td>
                <td>
                    <form method="post">
                        <a asp-page="DeleteReport" asp-route-id="@item.Id">Delete</a>
                    </form>
                </td>
                <td>*</td>
            </tr>
        }
    </tbody>
</table>


<div>
    <a asp-page="Index">Back</a>
</div>
