@model DailyReport.WebLayer.Models.LoginViewModel
@using Microsoft.AspNetCore.Mvc.Localization


<h2>Log in </h2>
<form method="post" asp-controller="Account" asp-action="Login">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label asp-for="Email">Email</label><br />
        <input asp-for="Email" />
        <span asp-validation-for=Email></span>
    </div>
    <div>
        <label asp-for="Password">Password</label><br />
        <input asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div>
        <label asp-for="RememberMe">RememberMe</label><br />
        <input asp-for="RememberMe" />
    </div>
    <div>
        <input type="submit" value=Send style="background-color:green"/>
    </div>
    <div>
        <a asp-controller="Home" asp-action="Index">Back</a>
    </div>
</form>
